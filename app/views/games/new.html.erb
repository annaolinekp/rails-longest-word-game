<div class="container">
  <h1>NEW GAME</h1>
  <p>Make a word from the letters below!</p>

  <p class="values"><% @letters.each do |letter| %>
    <%= letter %>
  <% end %></p>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input class="input_box" type="text" name="user_answer" placeholder="Answer">
    <input class="button" type="submit">
  </form>
</div>
